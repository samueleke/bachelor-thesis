{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "jsx": "react",
        "outDir": "./dist/out-tsc",
        "rootDir": "./src",
        "types": [
            "vitest/globals",
            "vitest/importMeta",
            "vite/client",
            "vitest",
            "node"
        ],
        "esModuleInterop": true,
        "allowJs": true,
        "lib": ["es7", "dom"],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true
    },
    "files": [
        "../../node_modules/@nx/react/typings/cssmodule.d.ts",
        "../../node_modules/@nx/react/typings/image.d.ts"
    ],
    "include": [
        "src/vite.config.ts",
        "src/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
}
